    "jest": "^22.4.4",
    "nodemon": "^1.17.4",
    "ts-jest": "^22.4.6",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
